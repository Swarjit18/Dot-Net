﻿@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_OuterLayout.cshtml";
}


<h2>

    @if (Model != null)
    {


        @Model.name
        @Model.userid
        @Model.password
        @Model.studentID
        @Model.email
        @Model.dob

    }
</h2>

<h2>Sign up</h2>

<form action="" method="post">


    <label for="name">Name:</label>
    <input type="text" id="name" name="name" pattern="[A-Za-z\s.\-]{4,50}" placeholder="name">
    <br>
    <br>

    <label for="userid">User ID:</label>
    <input type="text" id="userid" name="userid" pattern="[A-Za-z0-9_-]{4,12}" placeholder="userid">
    <br>
    <br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" pattern="@("^(?=.*[A-Za-z]{4})(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*])[A-Za-z0-9!@#$%^&*]{8,}$")" placeholder="password">
    <br>
    <br>

    <label for="studentID">Student ID:</label>
    <input type="text" id="studentID" name="studentID"  pattern="[0-9]{2}-[0-9]{5}-[0-9]{1}" placeholder="studentID">
    <br>
    <br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" pattern="@("[0-9]{2}-[0-9]{5}-[0-9]{1}+@student.aiub.edu")" placeholder="email">
    <br>
    <br>

    <label for="dob">Date of Birth:</label>
    <input type="date" id="dob" name="dob" placeholder="dob">
    <br>
    <br>

    <input type="submit" value="Signup">






</form>



















